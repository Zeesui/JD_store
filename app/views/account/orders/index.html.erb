
<div class="row order-group">
	<div class="col-md-12">
		<div class="container">
			<h2>订单列表</h2>
			<% @orders.each do |order| %>
			<div class="panel panel-default">
				<table class="table table-shipping" >
						<span>订单编号：<%= order.token %></span>
				  <thead>
				    <tr>
				      <th>商品资讯</th>
				      <th>价格</th>
				      <th>数量</th>
				      <th>小计</th>
				    </tr>
				  </thead>
				  <tbody>
						<% order.product_lists.each do |product_list| %>
				    <tr>
				      <td><%= product_list.product_name %></td>
				      <td><%= product_list.product_price %></td>
				      <td><%= product_list.quantity %></td>
				      <td><%= product_list.product_price * product_list.quantity %></td>
				    </tr>
						<% end %>
				  </tbody>

				</table>
			</div>

			<% end %>
		</div>
	</div>


</div>
