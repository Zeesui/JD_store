<h2>订单列表</h2>

<table class="table table-bordered">
	<thead>
		<tr>
			<th>#</th>
			<th>Created</th>
			<th>订单状态</th>
			<th>Option</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
    <tr>
      <td> <%= link_to(order.id, order_path(order.token)) %> </td>
      <td> <%= order.created_at.to_s(:db) %> </td>
			<td>  <%= render_order_paid_state(order) %> </td>
			<td >
				<%= render "account/orders/state_option", order: order %>
			</td>
    </tr>
    <% end %>
	</tbody>
</table>
