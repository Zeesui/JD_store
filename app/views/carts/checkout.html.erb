<div class="row">
	<div class="col-md-12">
		<h2>购物明细</h2>

      <%= simple_form_for @order do |f| %>
		<table class="table table-bordered">
      <thead>
        <tr>
          <th width="60%">商品明细</th>
          <th>单价</th>
          <th>数量</th>
          <th>小计</th>
        </tr>
      </thead>
      <tbody>

        <% @items.each do |cart_item| %>
          <tr>

							<input type="hidden" name="items[]" value="<%= cart_item.id %>">


            <td>
              <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
            </td>
            <td>
              <%= cart_item.product.price %>
            </td>

            <td>
              <%= cart_item.quantity %>
            </td>
            <td>
            	<%= cart_item.quantity * cart_item.product.price %>
            </td>

          </tr>
        <% end %>

      </tbody>
    </table>
    <div class="total">
    	<span class="pull-right">
    		总计：<%= render_cart_total_price(@items) %>
    	</span>
    </div>
    <hr>
    <h2>订单资讯</h2>
    <div class="order-form">

          <div class="form-group col-md-4">
          	<%= f.input :name, :label => "姓名" %>
          </div>
          <div class="form-group col-md-4">
          	<%= f.input :cellphone, label: "电话" %>
          </div>
          <div class="form-group col-md-4">
          	<%= f.input :address, label: "地址" %>
          </div>

           <div class="checkout">
           	<%= f.submit '生成订单', class: "btn btn-lg btn-danger pull-right", data: {disable_with: "稍后.."} %>
           </div>

    	<% end %>
    </div>
	</div>
</div>
