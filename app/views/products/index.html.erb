<div class="row product-index">
	<% @products.each do |product| %>
		<div class="col-xs-6 col-md-3">
			<%= link_to product_path(product) do %>
				<% if product.image.present? %>
					<%= image_tag(product.image.thumb.url, class: "thumbnail") %>
					<% else %>
					<%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
				<% end %>
			<% end %>
			<%= product.title %> ¥ <%= product.price %>
			 <%= link_to("加入购物车", add_to_cart_product_path(product), :method => :post) %>
			 <% if current_user && current_user.is_member_of(product) %>
			 		<%= link_to('取消收藏', uncollected_product_path(product), :method => :post) %>
					<% else %>
					<%= link_to("加入收藏", collected_product_path(product), method: :post) %>
			 <% end %>
		</div>
	<% end %>
</div>
