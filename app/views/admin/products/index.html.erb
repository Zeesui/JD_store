

<div class="admin-products-index">
	<div class="container-fluid">
		<div class="page-header">
			<%= link_to("新增商品", new_admin_product_path, class: "btn btn-raised btn-success pull-right") %>
		</div>
		<div class="panel panel-default">
			<table class="table table-shopping">
				<thead>
					<th>#</th>
					<th>商品描述</th>
					<th>价格</th>
					<th>数量</th>
					<th>操作</th>
				</thead>
				<% @products.each do |product| %>
                  <tr>
                  	<td><%= product.id %></td>
                  	<td><%= link_to(product.title, admin_product_path(product)) %></td>
                  	<td><%= product.price %></td>
                  	<td><%= product.quantity %></td>
                  	<td>
											<% if product.is_hidden %>
												<%= link_to("上架商品", public_admin_product_path(product), :method => :post) %> |
												<% else %>
												<%= link_to("下架商品", hide_admin_product_path(product), :method => :post) %> |
											<% end %>
                  		<%= link_to("编辑", edit_admin_product_path(product)) %> |
                  		<%= link_to("删除", admin_product_path(product), :method => :delete, :data => {:confirm => "确认删除？"}) %>
                  	</td>
                  </tr>
				<% end %>
			</table>
		</div>
	</div>
</div>
